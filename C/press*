#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	int i,j,k,in;
	scanf_s("%d",&in);
	
	
	for(i=0;i<=in;i++)
	{
	
		for(j=1;j<=i;j++)
	printf("*");
	printf("\n");
	
}
	for(i-1;i>=1; i--)
	{
		
		for(j=1;j<=i;j++)
		printf("*");
		printf("\n");
		
	}
	
		for(i=1;i<=in;i++)
	{
		for(j =1; j<=in-i; j++)
		printf(" ");
	
		for(j=1;j<=i;j++)
	printf("*");
	printf("\n");
	
}
	for(i- in-1;i>=1; i--)
	{
		for(i=1; j<=in-i; j++)
		printf(" ");
		
		for(j=1;j<=i;j++)
		printf("*");
		printf("\n");
		
	}

	return 0;
}
